{% extends 'base.html.twig' %}

{% block title %}Carnet de santé{% endblock %}

{% block body %}
    <div class="breadcrumb_custom">
        {% include 'includes/back_personnal_space.html.twig' %}
    </div>

    <div>
        <h2>Carnet de santé de {{ animal_info.name }}</h2>
        <ul>
            {% for key, value in animal_info %}
                {% if value is not same as (animal_info.name) %}
                    {% if value is empty %}
                        <li class="field full">{{ key }} : N/A</li>
                    {% else %}
                        <li class="field full">{{ key }} : {{ value }}</li>
                    {% endif %}
                {% endif %}
            {% endfor %}
        </ul>
        <a class="button" href={{ link_to_edit }}>Modifier les informations du carnet</a>
    </div>


{% endblock %}
