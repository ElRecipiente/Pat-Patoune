{% extends 'base.html.twig' %}

{% block title %}Animal index{% endblock %}

{% block body %}
    <h1>Animal index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Identification_number</th>
                <th>Tatoo_number</th>
                <th>Sex</th>
                <th>Birth_date</th>
                <th>Sterilisation_date</th>
                <th>Breed_type</th>
                <th>Color</th>
                <th>Distinctive_marks</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for animal in animals %}
            <tr>
                <td>{{ animal.id }}</td>
                <td>{{ animal.name }}</td>
                <td>{{ animal.identificationNumber }}</td>
                <td>{{ animal.tatooNumber }}</td>
                <td>{{ animal.sex }}</td>
                <td>{{ animal.birthDate ? animal.birthDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ animal.sterilisationDate ? animal.sterilisationDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ animal.breedType }}</td>
                <td>{{ animal.color }}</td>
                <td>{{ animal.distinctiveMarks }}</td>
                <td>
                    <a href="{{ path('app_animal_show', {'id': animal.id}) }}">show</a>
                    <a href="{{ path('app_animal_edit', {'id': animal.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="11">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_animal_new') }}">Create new</a>
{% endblock %}
