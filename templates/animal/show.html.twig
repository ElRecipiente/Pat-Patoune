{% extends 'base.html.twig' %}

{% block title %}Animal{% endblock %}

{% block body %}
    <h1>Animal</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ animal.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ animal.name }}</td>
            </tr>
            <tr>
                <th>Identification_number</th>
                <td>{{ animal.identificationNumber }}</td>
            </tr>
            <tr>
                <th>Tatoo_number</th>
                <td>{{ animal.tatooNumber }}</td>
            </tr>
            <tr>
                <th>Sex</th>
                <td>{{ animal.sex }}</td>
            </tr>
            <tr>
                <th>Birth_date</th>
                <td>{{ animal.birthDate ? animal.birthDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Sterilisation_date</th>
                <td>{{ animal.sterilisationDate ? animal.sterilisationDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Breed_type</th>
                <td>{{ animal.breedType }}</td>
            </tr>
            <tr>
                <th>Color</th>
                <td>{{ animal.color }}</td>
            </tr>
            <tr>
                <th>Distinctive_marks</th>
                <td>{{ animal.distinctiveMarks }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_animal_index') }}">back to list</a>

    <a href="{{ path('app_animal_edit', {'id': animal.id}) }}">edit</a>

    {{ include('animal/_delete_form.html.twig') }}
{% endblock %}
